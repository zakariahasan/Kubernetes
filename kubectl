
# To deploy nginx image to the cluser
kubectl create deployment ngix-depl --image=nginx

# To see the replicaset
kubeclt get replicaset

# To see the pod
kubectl get pod

# To edit pod or contanier
kubectl edit deployment <podname>

kubectl logs <podname>

kubectl 

kubectl delete deployment <podname>

# To access the interactive terminal for contanier
kubectl exec -it <pod name> -- bin/bash

kubectl apply -f nginx-dep.ymal

